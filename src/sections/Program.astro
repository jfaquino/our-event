---
import CalendarButton from "@/components/CalendarButton.astro";
import OrnamentDivider from "@/assets/icons/OrnamentDivider.astro";
import { DATE_LONG } from "@/consts/constant";

const LOCATION_URL = "https://maps.app.goo.gl/5q8Dun7xUR54vY4K8";
---

<section class="py-16 px-2 md:px-5 flex justify-center">
   <div
      class="relative w-full max-w-[500px] px-3 md:px-8 py-9 border-[1px] border-accent"
   >
      <div>
         <!-- top left -->
         <img
            src="/icons/ornament-corner.svg"
            class="w-[25px] md:w-[37px] h-auto absolute -top-[1px] md:-top-[2px] -left-[1px]"
         />
         <!-- top right -->
         <img
            src="/icons/ornament-corner.svg"
            class="w-[25px] md:w-[37px] h-auto absolute -top-[1px] md:-top-[2px] -right-[1px] md:-right-[2px] -scale-x-100"
         />
         <!-- bottom left -->
         <img
            src="/icons/ornament-corner.svg"
            class="w-[25px] md:w-[37px] h-auto absolute -bottom-[1px] -left-[1px] -scale-y-100"
         />
         <!-- bottom right -->
         <img
            src="/icons/ornament-corner.svg"
            class="w-[25px] md:w-[37px] h-auto absolute -bottom-[1px] -right-[1px] md:-right-[2px] -scale-y-100 -scale-x-100"
         />
      </div>

      <div
         class="w-full bg-secondary rounded-2xl text-accent text-center py-5 px-2"
      >
         <div class="w-full flex justify-center py-5">
            <img src="/rings.svg" class="w-28 h-28" />
         </div>

         <h3 class="text-3xl font-numbers">
            Ceremonia <span class="block leading-none">&</span> Celebración
         </h3>

         <div class="w-[180px] mx-auto py-2 text-[#73592f]">
            <OrnamentDivider />
         </div>

         <div class="flex flex-col gap-5 mt-3">
            <div class="space-y-3 py-5">
               <h5 class="text-2xl">Día</h5>
               <p class="text-primary text-balance">
                  {DATE_LONG}
               </p>

               <CalendarButton />
            </div>

            <div class="space-y-3 py-5">
               <h5 class="text-2xl">Dirección</h5>
               <p class="text-primary text-balance">Alphabet, california)</p>
               <a class="block" href={LOCATION_URL} target="_blank">
                  <button
                     class="w-[60%] px-4 py-3 rounded-md bg-accent text-secondary"
                     >¿Cómo llegar?</button
                  >
               </a>
            </div>
         </div>
      </div>
   </div>
</section>
